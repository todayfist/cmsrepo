<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mashen.ssm.article.dao.IArticleDao">
	
	<!-- 结果集的映射，将数据库中的字段映射到Model对象中 -->
	<resultMap id="ArticleResultMap" type="com.mashen.ssm.article.model.Article">
		<result property="id" column="ID"></result>
		<result property="categoryid" column="CATEGORYID"></result>
		<result property="headlineid" column="HEADLINEID" ></result>
		<result property="viewcount" column="VIEWCOUNT" ></result>
		<result property="headline" column="HEADLINE" ></result>
		<result property="content" column="CONTENT" ></result>
		<result property="headname" column="HEADNAME"></result>
		<result property="thumb" column="THUMB" ></result>
		<result property="headimg" column="HEADIMG" ></result>
		<result property="creationtime" column="CREATIONTIME"></result>
		
	</resultMap>
	
	<!-- 使用insert标签，插入emp对象 -->
	<insert id="add" parameterType="com.mashen.ssm.article.model.Article">
		insert into article
		(id,categoryid,headlineid,viewcount,headline,content,headname,thumb,headimg,creationtime) 
		values(#{id},#{categoryid},#{headlineid},#{viewcount},#{headline},#{content},#{headname},#{thumb},#{headimg},#{creationtime})
	</insert>
	<delete id="delete" parameterType="java.lang.Integer">
		delete from article where id = #{id}
	</delete>
	<update id="update" parameterType="com.mashen.ssm.article.model.Article">
		update article set categoryid=#{categoryid},headlineid=#{headlineid},viewcount=#{viewcount},headline=#{headline},content=#{content},headname=#{headname},thumb=#{thumb},headimg=#{headimg},creationtime=#{creationtime} where id =#{id}
	</update>
	<select id="selectbyid" parameterType="java.lang.Integer" resultMap="ArticleResultMap">
		select * from article where id = #{id}
	</select>
	<select id="select" resultMap="ArticleResultMap">
		select * from Article
	</select>
	<select id="selectbyname" parameterType="java.lang.String" resultMap="ArticleResultMap">
		select * from Article where headline = #{headline}
	</select>

	
</mapper>