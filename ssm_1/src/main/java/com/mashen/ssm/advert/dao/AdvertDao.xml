<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mashen.ssm.advert.dao.IAdvertDao">
	
	<!-- 结果集的映射，将数据库中的字段映射到Model对象中 -->
	<resultMap id="AdvertResultMap" type="com.mashen.ssm.advert.model.Advert">
		<result property="id" column="ID"></result>
		<result property="advertisings" column="ADVERTISINGS" ></result>
		<result property="adLinks" column="ADLINKS" ></result>
		<result property="creationtime" column="CREATIONTIME"></result>
		
	</resultMap>
	
	<!-- 使用insert标签，插入emp对象 -->
	<insert id="add" parameterType="com.mashen.ssm.advert.model.Advert">
		insert into advertisement
		(id,advertisings,adLinks,creationtime) 
		values(#{id},#{advertisings},#{adLinks},#{creationtime})
	</insert>
	<delete id="delete" parameterType="java.lang.Integer">
		delete from advertisement where id = #{id}
	</delete>
	<update id="update" parameterType="com.mashen.ssm.advert.model.Advert">
		update advertisement set advertisings=#{advertisings},adLinks=#{adLinks},creationtime=#{creationtime} where id =#{id}
	</update>
	<select id="selectbyid" parameterType="java.lang.Integer" resultMap="AdvertResultMap">
		select * from advertisement where id = #{id}
	</select>
	<select id="select" resultMap="AdvertResultMap">
		select * from advertisement
	</select>


	
</mapper>